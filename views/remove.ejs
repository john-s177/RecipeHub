<%- include("partials/header.ejs")   %>

<% if (locals.message) { %>
    <h6 style="text-align: center; margin-top: 10px;"><%= message %></h6>
<% } %>

<div class="d-flex justify-content-center mt-4">
    <form action="/removeRecipe" method="POST" class="w-50">
        <div class="mb-3">
            <label for="recipeName" class="form-label">Enter Recipe Name:</label>
            <input type="text" id="recipeName" name="recipeName" autocomplete="off" class="form-control" required
            value = "<%= locals.name || '' %>" > 
        </div>
        <div class = "text-center">
        <button type="submit" class="btn btn-outline-danger">Remove Recipe</button>
    </div>
    </form>
    
</div>
<% if (locals.response) { %>
    <h2><%= locals.response %></h2> ->
<% } %>

<%- include("partials/footer.ejs")   %>